[Unit]
Description=MongoDB Server
After=network.target

[Install]
WantedBy=multi-user.target

[Service]
Type=simple

LimitNOFILE=524288
LimitNPROC=524288

Restart=always
RestartSec=10

TimeoutSec=30

User=__USER_NAME__
Group=__GROUP_NAME__

ExecStart='__INSTALL_FOLDER__/bin/mongod' --port __PORT__ --dbpath '__INSTALL_DATA_FOLDER__'