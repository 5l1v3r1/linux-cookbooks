[Unit]
Description=Ghost Server
After=network.target

[Install]
WantedBy=multi-user.target

[Service]
Type=simple

LimitNOFILE=524288
LimitNPROC=524288

Restart=always
RestartSec=10

TimeoutSec=30

User=__USER_NAME__
Group=__GROUP_NAME__

Environment='NODE_ENV=__ENVIRONMENT__'

ExecStart=/bin/bash -c -e '\
    node \'__INSTALL_FOLDER_PATH__/index\' \
'